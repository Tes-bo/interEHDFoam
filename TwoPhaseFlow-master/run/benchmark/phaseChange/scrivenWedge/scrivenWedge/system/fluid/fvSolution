solvers
{
    alpha.water
    {
        nAlphaCorr              2;
        nAlphaSubCycles         1;
        cAlpha                  2;

        MULESCorr               no;
        nLimiterIter            5;

        solver                  smoothSolver;
        smoother                symGaussSeidel;
        tolerance               1e-8;
